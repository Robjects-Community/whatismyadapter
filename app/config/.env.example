# ===================================================================
# WILLOWCMS CONFIG ENVIRONMENT FILE (EXAMPLE)
# ===================================================================
# Copy this file to .env and replace placeholder values
# This file is safe to commit to version control
# ===================================================================

WILLOWCMS_IMAGE=ghcr.io/robjects-community/whatismyadapter_cms
TAG=pre-willowcms-beta

# ===================================================================
# APPLICATION CONFIGURATION
# ===================================================================
APP_NAME=WillowCMS
DEBUG=true
APP_ENCODING=UTF-8
APP_DEFAULT_LOCALE=en_GB
APP_DEFAULT_TIMEZONE=America/Chicago

# Security salt - CRITICAL: Generate a unique 64-character string
SECURITY_SALT=CHANGE_ME_TO_64_CHARACTER_RANDOM_STRING
DIGITAL_OCEAN_KEY=CHANGE_ME

# ===================================================================
# MYSQL CONFIGURATION
# ===================================================================
MYSQL_ROOT_PASSWORD=password
DB_DATABASE=cms
DB_USERNAME=cms_user
DB_PASSWORD=password
DB_PORT=3306
DB_HOST=mysql

# ===================================================================
# TEST DATABASE CONFIGURATION
# ===================================================================
TEST_DB_HOST=mysql
TEST_DB_DATABASE=cms_test
TEST_DB_USERNAME=cms_user_test
TEST_DB_PASSWORD=password
TEST_DB_PORT=3306

# ===================================================================
# EMAIL/SMTP CONFIGURATION
# ===================================================================
EMAIL_HOST=mailpit
EMAIL_PORT=1025
EMAIL_TIMEOUT=30
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_REPLY=hello@willowcms.app
EMAIL_NOREPLY=noreply@willowcms.app

# ===================================================================
# REDIS CONFIGURATION
# ===================================================================
REDIS_HOST=willowcms
REDIS_PORT=6379
REDIS_DATABASE=0
REDIS_USERNAME=root
REDIS_PASSWORD=root
REDIS_URL=redis://${REDIS_USERNAME}:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/0
REDIS_TEST_URL=redis://${REDIS_USERNAME}:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/0

# ===================================================================
# EXTERNAL API KEYS
# ===================================================================
YOUTUBE_API_KEY=
TRANSLATE_API_KEY=
# OpenAI API key for AI features
OPENAI_API_KEY=change-me

# ===================================================================
# QUEUE SYSTEM CONFIGURATION
# ===================================================================
QUEUE_DEFAULT_URL=redis://root:root@willowcms:6379/0
QUEUE_TEST_URL=redis://root:root@willowcms:6379/0

# ===================================================================
# ADMIN USER CONFIGURATION
# ===================================================================
WILLOW_ADMIN_USERNAME=admin
WILLOW_ADMIN_PASSWORD=password
WILLOW_ADMIN_EMAIL=admin@test.com

# ===================================================================
# SERVICE CONFIGURATION
# ===================================================================
PMA_HOST=mysql
PMA_USER=root
PMA_PASSWORD=password
UPLOAD_LIMIT=1024M

JAVA_OPTS=-Djenkins.install.runSetupWizard=true

MP_MAX_MESSAGES=5000
MP_DATABASE=/data/mailpit.db
MP_SMTP_AUTH_ACCEPT_ANY=1
MP_SMTP_AUTH_ALLOW_INSECURE=1

HTTP_USER=root
HTTP_PASSWORD=root
REDIS_COMMANDER_USERNAME=root
REDIS_COMMANDER_HOST=willowcms
REDIS_COMMANDER_PORT=6379
REDIS_COMMANDER_PASSWORD=root

# ===================================================================
# APPLICATION BASE URL
# ===================================================================
APP_FULL_BASE_URL=http://localhost:8080

# ===================================================================
# TESTING AND DEVELOPMENT
# ===================================================================
EXPERIMENTAL_TESTS=On

# ===================================================================
# DOCKER PORTS
# ===================================================================
WILLOW_HTTP_PORT=8080
MYSQL_PORT=3310
PMA_HTTP_PORT=8082
JENKINS_HTTP_PORT=8081
JENKINS_AGENT_PORT=50000
MAILPIT_SMTP_PORT=1125
MAILPIT_HTTP_PORT=8025
REDIS_COMMANDER_HTTP_PORT=8084
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# ===================================================================
# DOCKER CONFIGURATION
# ===================================================================
DOCKER_UID=1000
DOCKER_GID=1000
MYSQL_IMAGE_TAG=8.4.3
PHPMYADMIN_IMAGE_TAG=latest
MAILPIT_IMAGE_TAG=latest
REDIS_COMMANDER_IMAGE_TAG=latest
RABBITMQ_IMAGE_TAG=3.13-management

# ===================================================================
# RABBITMQ CONFIGURATION
# ===================================================================
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# ===================================================================
# QUEUE CONFIGURATION
# ===================================================================
QUEUE_CONFIG_KEY=image_analysis