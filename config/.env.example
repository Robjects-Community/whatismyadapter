# ===================================================================
# WILLOWCMS CONFIGURATION TEMPLATE
# ===================================================================
# Copy this file to config/.env and customize for your environment
# Never commit secrets to version control - use .env.example only
# ===================================================================

# Project Configuration
COMPOSE_PROJECT_NAME=willowcms
COMPOSE_FILE=docker-compose.yml

# Docker Container Configuration
DOCKER_UID=1000
DOCKER_GID=1000
USE_HOST_MOUNTS=true

# ===================================================================
# APPLICATION CONFIGURATION
# ===================================================================
APP_NAME=WillowCMS
DEBUG=true
APP_ENCODING=UTF-8
APP_DEFAULT_LOCALE=en_GB
APP_DEFAULT_TIMEZONE=America/Chicago
APP_FULL_BASE_URL=http://localhost:8080

# CRITICAL: Generate a unique 64-character string for production
SECURITY_SALT=change-me-in-production

# ===================================================================
# SERVICE PORTS (customizable for your development environment)
# ===================================================================
# WillowCMS Application
WILLOW_HTTP_PORT=8080
WILLOW_HTTPS_PORT=8443

# MySQL Database
MYSQL_PORT=3310

# phpMyAdmin
PMA_PORT=8082

# Mailpit (Email Testing)
MAILPIT_SMTP_PORT=1125
MAILPIT_UI_PORT=8025

# Redis Commander
REDIS_COMMANDER_PORT=8084

# Jenkins (CI/CD) - Optional
JENKINS_PORT=8081

# ===================================================================
# MYSQL DATABASE CONFIGURATION
# ===================================================================
MYSQL_IMAGE_TAG=8.0
MYSQL_ROOT_PASSWORD=change-me-in-production
MYSQL_DATABASE=cms
MYSQL_USER=cms_user
MYSQL_PASSWORD=change-me-in-production

# Test Database
TEST_DB_DATABASE=cms_test
TEST_DB_USER=cms_user_test
TEST_DB_PASSWORD=change-me-in-production

# ===================================================================
# REDIS CONFIGURATION
# ===================================================================
REDIS_HOST=willowcms
REDIS_PORT=6379
REDIS_DATABASE=0
REDIS_USERNAME=
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DATABASE}
REDIS_TEST_URL=redis://${REDIS_HOST}:${REDIS_PORT}/1

# ===================================================================
# EMAIL CONFIGURATION
# ===================================================================
EMAIL_HOST=mailpit
EMAIL_PORT=1025
EMAIL_TIMEOUT=30
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_REPLY=hello@willowcms.local
EMAIL_NOREPLY=noreply@willowcms.local

# ===================================================================
# PHPMYADMIN CONFIGURATION
# ===================================================================
PHPMYADMIN_IMAGE_TAG=latest
UPLOAD_LIMIT=300M

# ===================================================================
# MAILPIT CONFIGURATION
# ===================================================================
MAILPIT_IMAGE_TAG=latest
MP_MAX_MESSAGES=5000
MP_SMTP_AUTH_ACCEPT_ANY=1
MP_SMTP_AUTH_ALLOW_INSECURE=1

# ===================================================================
# JENKINS CONFIGURATION (Optional)
# ===================================================================
JENKINS_IMAGE_TAG=latest
JAVA_OPTS=-Djenkins.install.runSetupWizard=false

# ===================================================================
# REDIS COMMANDER CONFIGURATION
# ===================================================================
REDIS_COMMANDER_IMAGE_TAG=latest
HTTP_USER=admin
HTTP_PASSWORD=change-me-in-production

# ===================================================================
# EXTERNAL API KEYS (Optional)
# ===================================================================
YOUTUBE_API_KEY=
TRANSLATE_API_KEY=
OPENAI_API_KEY=

# ===================================================================
# QUEUE SYSTEM
# ===================================================================
QUEUE_DEFAULT_URL=${REDIS_URL}
QUEUE_TEST_URL=${REDIS_TEST_URL}

# ===================================================================
# ADMIN USER (Initial Setup)
# ===================================================================
WILLOW_ADMIN_USERNAME=admin
WILLOW_ADMIN_PASSWORD=change-me-in-production
WILLOW_ADMIN_EMAIL=admin@willowcms.local

# ===================================================================
# DEVELOPMENT OPTIONS
# ===================================================================
XDEBUG_ENABLE=false
EXPERIMENTAL_TESTS=false

# ===================================================================
# TIMEZONE
# ===================================================================
TZ=America/Chicago

# ===================================================================
# SECURITY REMINDERS
# ===================================================================
# 1. Copy this file to config/.env and customize all passwords/keys
# 2. Use strong, unique passwords for all services
# 3. Regularly rotate API keys and passwords  
# 4. Set DEBUG=false in production
# 5. Use HTTPS in production environments
# 6. Never commit real credentials to version control
# ===================================================================