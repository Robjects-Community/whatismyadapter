# ===================================================================
# WILLOW CMS PRODUCTION SECRETS (stack.env)
# ===================================================================
# This file contains production secrets and should be encrypted/secured
# Copy to stack.env and replace all placeholder values
# 
# CRITICAL: Never commit this file to version control
# Store securely and deploy via secure channels only
# ===================================================================

# ===================================================================
# CORE SECURITY SECRETS
# ===================================================================
# Application security salt (64+ character random string)
SECURITY_SALT=REPLACE_WITH_SECURE_64_CHAR_RANDOM_STRING_FOR_PRODUCTION

# ===================================================================
# DATABASE SECRETS
# ===================================================================
# Production database connection (managed DB recommended)
DATABASE_URL=mysql://prod_user:SECURE_DB_PASSWORD_HERE@prod-db-host:25060/cms_production?ssl-mode=REQUIRED

# Self-hosted database passwords (if using all-in-one)
MYSQL_ROOT_PASSWORD=SECURE_MYSQL_ROOT_PASSWORD_HERE
MYSQL_PASSWORD=SECURE_MYSQL_USER_PASSWORD_HERE
DB_PASSWORD=SECURE_MYSQL_USER_PASSWORD_HERE

# ===================================================================
# REDIS SECRETS
# ===================================================================
# Production Redis connection (managed Redis recommended)
REDIS_URL=rediss://:SECURE_REDIS_PASSWORD_HERE@prod-redis-host:25061/0

# Self-hosted Redis password (if using all-in-one)
REDIS_PASSWORD=SECURE_REDIS_PASSWORD_HERE

# ===================================================================
# DIGITALOCEAN SPACES SECRETS
# ===================================================================
# Spaces access credentials for file uploads
SPACES_KEY=YOUR_PRODUCTION_SPACES_ACCESS_KEY
SPACES_SECRET=YOUR_PRODUCTION_SPACES_SECRET_KEY

# ===================================================================
# API KEYS
# ===================================================================
# Required API keys for production
OPENAI_API_KEY=sk-prod-YOUR_PRODUCTION_OPENAI_API_KEY
DIGITAL_OCEAN_KEY=dop_v1_YOUR_PRODUCTION_DIGITALOCEAN_API_KEY

# Optional service API keys
ANTHROPIC_API_KEY=sk-ant-api03-YOUR_ANTHROPIC_API_KEY
YOUTUBE_API_KEY=YOUR_YOUTUBE_API_KEY
TRANSLATE_API_KEY=YOUR_TRANSLATE_API_KEY
UNSPLASH_ACCESS_KEY=YOUR_UNSPLASH_ACCESS_KEY
PERPLEXITY_API_KEY=YOUR_PERPLEXITY_API_KEY

# ===================================================================
# EMAIL SECRETS
# ===================================================================
# SMTP credentials for production email
EMAIL_USERNAME=your-smtp-username@provider.com
EMAIL_PASSWORD=YOUR_SECURE_SMTP_PASSWORD

# ===================================================================
# ADMIN CREDENTIALS
# ===================================================================
# Production admin user credentials
WILLOW_ADMIN_PASSWORD=SECURE_ADMIN_PASSWORD_WITH_SPECIAL_CHARS_123

# ===================================================================
# SSL/TLS SECRETS
# ===================================================================
# Email for Let's Encrypt SSL certificates
SSL_EMAIL=admin@your-production-domain.com

# ===================================================================
# BACKUP ENCRYPTION
# ===================================================================
# Backup encryption key (if backup encryption enabled)
BACKUP_ENCRYPTION_KEY=YOUR_BACKUP_ENCRYPTION_KEY_HERE

# ===================================================================
# SECURITY GUIDELINES
# ===================================================================
# 1. Generate unique, strong passwords for each service
# 2. Use password managers to generate secure values
# 3. Rotate secrets regularly (quarterly recommended)
# 4. Encrypt this file at rest
# 5. Use secure deployment pipelines
# 6. Monitor for unauthorized access
# 7. Audit secret usage regularly
# 8. Never share secrets via insecure channels
# 9. Use different secrets for staging vs production
# 10. Document secret rotation procedures
# ===================================================================