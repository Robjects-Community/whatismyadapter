# DigitalOcean Droplet Configuration
# Copy this file to .env and fill in your actual values

# Droplet Information
DROPLET_IP=your.droplet.ip.address
DROPLET_ID=523484739
DROPLET_NAME=willow-prod
DROPLET_REGION=nyc1

# SSH Configuration
# If you initially provisioned the droplet with the root user only, keep SSH_USER=root
# Otherwise set to a non-root user (e.g., 'deploy') that has your public key in ~/<user>/.ssh/authorized_keys
SSH_USER=root
# Path to your private key used for the droplet. This will be used explicitly by the deploy script.
SSH_KEY_PATH=~/.ssh/id_ed25519
# Optional: non-default SSH port
SSH_PORT=22
# Optional: name of the intended deploy user on the droplet (informational)
DEPLOY_USER=deploy

# Docker Configuration
DOCKER_PLATFORM=linux/amd64
COMPOSE_FILE=docker-compose-prod.yml

# Application Configuration
APP_ENV=production
APP_DEBUG=false
APP_URL=http://your.droplet.ip.address

# Database Configuration (use environment-specific values)
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=willow_prod
DB_USERNAME=willow_user
DB_PASSWORD=generate_secure_password

# Security
JWT_SECRET=generate_secure_jwt_secret
APP_KEY=generate_secure_app_key

# Backup Configuration
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=/volume1/docker/backups

# Monitoring
ENABLE_MONITORING=true
ALERT_EMAIL=your-email@domain.com

# GitHub Actions Secrets (reference only - set these in GitHub repo)
# DROPLET_IP
# SSH_PRIVATE_KEY
# DO_API_TOKEN