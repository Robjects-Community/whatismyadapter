# ===================================================================
# WILLOWCMS DOCKER COMPOSE ENVIRONMENT VARIABLES
# ===================================================================
# This file contains Docker Compose environment variables for WillowCMS
# Copy this file to .env (without .example) to configure your development environment
# ===================================================================

# Docker Compose Project Configuration
COMPOSE_PROJECT_NAME=willow
TIMEZONE=UTC

# ===================================================================
# SERVICE PORTS (Host:Container mapping)
# ===================================================================
WILLOW_HTTP_PORT=8080
MYSQL_PORT=3310
PMA_HTTP_PORT=8082
JENKINS_HTTP_PORT=8081
JENKINS_AGENT_PORT=50000
MAILPIT_SMTP_PORT=1125
MAILPIT_HTTP_PORT=8025
REDIS_COMMANDER_HTTP_PORT=8084

# ===================================================================
# MYSQL CONFIGURATION
# ===================================================================
MYSQL_DATABASE=cms
MYSQL_USER=cms_user
MYSQL_PASSWORD=password
MYSQL_ROOT_PASSWORD=password
MYSQL_HOST=mysql

# ===================================================================
# PHPMYADMIN CONFIGURATION
# ===================================================================
PMA_HOST=mysql
PMA_USER=root
PMA_PASSWORD=password
UPLOAD_LIMIT=300M

# ===================================================================
# REDIS CONFIGURATION
# ===================================================================
REDIS_HOST=redis
REDIS_PORT=6379

# ===================================================================
# REDIS CONFIGURATION
# ===================================================================
REDIS_HOST=willowcms
REDIS_PORT=6379

# ===================================================================
# REDIS COMMANDER CONFIGURATION
# ===================================================================

# ===================================================================
# JENKINS CONFIGURATION
# ===================================================================
JAVA_OPTS=-Djenkins.install.runSetupWizard=false

# ===================================================================
# MAILPIT CONFIGURATION
# ===================================================================
MP_MAX_MESSAGES=5000
MP_DATABASE=/data/mailpit.db
MP_SMTP_AUTH_ACCEPT_ANY=1
MP_SMTP_AUTH_ALLOW_INSECURE=1

# ===================================================================
# DOCKER IMAGE TAGS (optional; use latest if not specified)
# ===================================================================
MYSQL_IMAGE_TAG=8.4.3
PHPMYADMIN_IMAGE_TAG=latest
JENKINS_IMAGE_TAG=latest
MAILPIT_IMAGE_TAG=latest
REDIS_COMMANDER_IMAGE_TAG=latest

# ===================================================================
# DOCKER USER/GROUP IDs (for file permissions)
# ===================================================================
DOCKER_UID=501
DOCKER_GID=20
DEPLOYMENT_BACKUP_DIR=.backups/deployment-cleanup
DEPLOYMENT_BACKUP_PREFIX=deployment-cleanup-backup
DEPLOYMENT_BACKUP_NUMBER_WIDTH=4
