# Portainer Environment Template
# Copy this file to .env.portainer and update with your production values
# Portainer will use this file for environment variable substitution

# Stack Configuration
STACK_NAME=willow

# Security Configuration
SECURITY_SALT=your-production-security-salt-here-minimum-32-characters
WILLOW_ADMIN_USERNAME=admin
WILLOW_ADMIN_PASSWORD=your-secure-admin-password

# Database Configuration
MYSQL_ROOT_PASSWORD=your-mysql-root-password
MYSQL_USER=cms_user
MYSQL_PASSWORD=your-secure-mysql-password
MYSQL_DATABASE=cms
MYSQL_TEST_DATABASE=cms_test

# Redis Configuration
REDIS_PASSWORD=your-redis-password

# Email Configuration
EMAIL_REPLY=admin@yourdomain.com
EMAIL_NOREPLY=noreply@yourdomain.com

# Application Configuration
APP_FULL_BASE_URL=http://your-domain.com:7870
DEBUG=false

# Service Ports (Update if needed)
WILLOWCMS_PORT=7870
MYSQL_PORT=7810
PHPMYADMIN_PORT=7871
JENKINS_PORT=7872
MAILPIT_SMTP_PORT=7825
MAILPIT_UI_PORT=7873
REDIS_PORT=7876
REDIS_COMMANDER_PORT=7874

# Resource Limits (Adjust based on your server capacity)
WILLOWCMS_CPU_LIMIT=1.0
WILLOWCMS_MEMORY_LIMIT=1G
MYSQL_CPU_LIMIT=1.0
MYSQL_MEMORY_LIMIT=1G
JENKINS_CPU_LIMIT=1.0
JENKINS_MEMORY_LIMIT=1G
