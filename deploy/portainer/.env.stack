# Environment variables for Docker Stack deployment
# WillowCMS Portainer Stack Configuration

# Database Configuration
MYSQL_ROOT_PASSWORD=password
MYSQL_DATABASE=cms
MYSQL_USER=cms_user
MYSQL_PASSWORD=password
DB_HOST=mysql
DB_PORT=3306

# Test Database Configuration  
TEST_DB_HOST=mysql
TEST_DB_USERNAME=cms_user_test
TEST_DB_PASSWORD=password
TEST_DB_DATABASE=cms_test
TEST_DB_PORT=3306

# Port Mappings (77XX range to avoid conflicts)
WILLOWCMS_HTTP_PORT=7770
PHPMYADMIN_HTTP_PORT=7771
JENKINS_HTTP_PORT=7772
MAILPIT_UI_PORT=7773
MAILPIT_SMTP_PORT=7725
MYSQL_EXTERNAL_PORT=7710
REDIS_COMMANDER_PORT=7774

# Application Configuration
APP_NAME=WillowCMS
DEBUG=true
APP_ENCODING=UTF-8
APP_DEFAULT_LOCALE=en_GB
APP_DEFAULT_TIMEZONE=Europe/London
SECURITY_SALT=developmentsalt
APP_FULL_BASE_URL=http://localhost:7770

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DATABASE=0
REDIS_USERNAME=root
REDIS_PASSWORD=root
REDIS_URL=redis://root:root@redis:6379/0
REDIS_TEST_URL=redis://root:root@redis:6379/0

# Email/SMTP Configuration
SMTP_HOST=mailpit
SMTP_PORT=1025
EMAIL_HOST=mailpit
EMAIL_PORT=1025
EMAIL_TIMEOUT=30
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_REPLY=hello@willowcms.app
EMAIL_NOREPLY=noreply@willowcms.app

# Queue Configuration
QUEUE_DEFAULT_URL=redis://root:root@redis:6379/0
QUEUE_TEST_URL=redis://root:root@redis:6379/0

# WillowCMS Admin Configuration
WILLOW_ADMIN_USERNAME=admin
WILLOW_ADMIN_PASSWORD=password
WILLOW_ADMIN_EMAIL=admin@test.com

# Derived URLs
DATABASE_URL=mysql://${MYSQL_USER}:${MYSQL_PASSWORD}@mysql:3306/${MYSQL_DATABASE}
DATABASE_TEST_URL=mysql://${TEST_DB_USERNAME}:${TEST_DB_PASSWORD}@mysql:3306/${TEST_DB_DATABASE}
EMAIL_TRANSPORT_DEFAULT_URL=smtp://${SMTP_HOST}:${SMTP_PORT}

# Other Configuration
EXPERIMENTAL_TESTS=Off
YOUTUBE_API_KEY=
TRANSLATE_API_KEY=

# Jenkins Configuration
JAVA_OPTS=-Djenkins.install.runSetupWizard=false

# Mailpit Configuration
MP_MAX_MESSAGES=5000
MP_DATABASE=/data/mailpit.db
MP_SMTP_AUTH_ACCEPT_ANY=1
MP_SMTP_AUTH_ALLOW_INSECURE=1

# PHPMyAdmin Configuration
PMA_HOST=mysql
PMA_USER=root
PMA_PASSWORD=password
UPLOAD_LIMIT=300M

# Redis Commander Configuration
HTTP_USER=root
HTTP_PASSWORD=root
